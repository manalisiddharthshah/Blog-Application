{% extends 'navbar.html.twig' %}

{% block title %}Register Page{% endblock %}
{% block sub_content %}
<!-- BEGIN: Content-->
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <section class="row flexbox-container">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="col-lg-4 col-md-8 col-10 box-shadow-2 p-0">
                            <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
                                <div class="card-header border-0">
                                    <div class="card-title text-center">
                                        <h1>My Blog App</h1>
                                    </div>
                                </div>
                                <div class="card-content">
                                   <p class="card-subtitle line-on-side text-muted text-center mx-2 my-1"><span>Registration</span></p>
                                    <div class="card-body">
                                    {# Render the Form #}
                                    {{ form_start(registrationForm) }}

                                        {# If there are any errors on the form, display them #}
                                        {% set formErrors = registrationForm.vars.errors.form.getErrors(true) %}
                                        {% if formErrors|length %}
                                            <div class="alert alert-danger">
                                                <ul>
                                                    {% for error in formErrors %}
                                                        <li>{{ error.message }}</li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        {% endif %}

    
                                        {{ form_row(registrationForm.username) }}
                                        {{ form_row(registrationForm.email) }}
                                        {{ form_row(registrationForm.phone) }}
                                        {{ form_row(registrationForm.address) }}
                                        {{ form_row(registrationForm.password) }}
                                        <br>
                                        <button class="btn btn-outline-primary btn-block" type="submit">Register</button>                             

                                    {{ form_end(registrationForm) }}
                                    </div>
                                    <p class="card-subtitle line-on-side text-mute0d text-center font-small-3 mx-2 my-1"><span>Not New to My Blog App?</span></p>
                                    <div class="card-body">
                                        <a href="{{path('login')}}" class="btn btn-outline-danger btn-block">Login</a>
                                    </div
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- END: Content-->
{% endblock %}